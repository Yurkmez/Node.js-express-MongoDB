{{#if orders.length}}
    {{#each orders}}
        <div class='row'>
            <div class='col s6 offset-s3'>
                <div class='card'>
                    <div class='card-content'>
                        <span class='card-title'>
                            Order id:
                            <small>{{_id}}</small>
                        </span>
                        <p class='date'>{{date}}</p>
                        <p>UserName: <strong>{{user.userId.name}}</strong></p>
                        <p>UserEmail: <strong>{{user.userId.email}}</strong></p>

                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}}
                                    ( x<strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>
                        <hr />
                        <p> Price: <span class='price'>{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}

{{/if}}