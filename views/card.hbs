<div id='card'>
    {{#if courses.length}}
        <table>
            <head>
                <tr>
                    <th>Course</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </head>
            <tbody>
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>{{price}}</td>
                        <td>
                            {{! Логика обработки клика на кнопку находится в файле app.js, в папке public }}
                            <button
                                class='btn btn-small js-remove'
                                data-id={{id}}
                            >Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Sum price: </strong><span class='price'>{{price}}</span></p>
    {{else}}
        <p>Basket is empty</p>
    {{/if}}
</div>